@model Event
@{
    ViewData["Title"] = "EventPage";
    <style>
        .iframe-container {
            position: relative;
            width: 100%;
            padding-bottom: 56.25%; /* Ratio 16:9 ( 100%/16*9 = 56.25% ) */
        }

            .iframe-container > * {
                display: block;
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                margin: 0;
                padding: 0;
                height: 100%;
                width: 100%;
            }

        .iframe-container {
            margin-bottom: 50px;
            background: #eee;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col">
            <b class="text-dark">@Html.ActionLink("Back to events", "Events", "Event")</b>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>@Model.EventName</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-4">
            <img class="rounded img-fluid" style="max-width: 90%" src=~/Images/@Model.ImageSrc alt="Coaching1">
        </div>
        <div class="col-6">
            <p>@Model.Description</p>
        </div>
        <div class="col-2">
            <div class="card-body">
                <h5 class="card-title">Are you interested?</h5>
                <p class="card-text">@*@Model.Participants*@ people are already going!</p>
                <a class="col-lg-12 btn btn-primary" href="@Url.Action(" EventsJoin","Event",new {id=Model.EventId })">Join event</a>
                <a class="col-lg-12 btn btn-danger" href='@string.Format("/Event/DeleteEventPage?EventId={0}", Model.EventId)'>Verwijder event</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <i class="fa fa-map-marker" aria-hidden="true"></i><b class="text-primary">@Model.Location</b>
        <iframe class="iframe-container" frameborder="1" scrolling="no" marginheight="0" marginwidth="0" width="700" height="440"
                src="https://maps.google.com/maps?hl=nl&q=@Model.Location&ie=UTF8&t=m&z=15&iwloc=B&output=embed"></iframe>
    </div>
</div>
