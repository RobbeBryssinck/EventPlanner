@model Event

@{
    ViewData["Title"] = "Add Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
         .btn-Create {
            color: black;
            background-color: #fcd703;
            border-color: #fcca03;
        }

            .btn-Create:hover {
                color: black;
                background-color: #fcca03;
                border-color: #fcc203;
            }
    </style>
}
<h3>Images</h3>
<br />
<br />
<form method="post" asp-action="UploadImage" asp-controller="Event" enctype="multipart/form-data">
    <input type="file" name="files" multiple />
    <br />
    <br />
    <br />
    <input type="submit" value="Finish" class="btn btn-Create" />
</form>