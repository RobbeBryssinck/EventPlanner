@model Event
@{
    ViewData["Title"] = "EventPage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <b class="text-dark">@Html.ActionLink("Back to events","Events","Event")</b>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>@Model.EventName</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-4">
            <img class="rounded img-fluid" style="max-width: 90%" src=~/Images/@Model.ImageSrc alt="Coaching1">
        </div>
        <div class="col-6">
            <p>@Model.Description</p>
        </div>
        <div class="col-2">
            <div class="card-body">
                <h5 class="card-title">Are you interested?</h5>
                <p class="card-text">@*@Model.Participants*@ people are already going!</p>
                @if (@Model.Date > DateTime.Now)
                {
                    <a href="@Url.Action(" EventsJoin","Event",new {id=Model.EventId })"class="btn btn-primary">Join event</a>
                }
                else
                {
                    <a  class="text-warning font-weight-bold">Event is afgelopen.</a>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <i class="fa fa-map-marker" aria-hidden="true"></i><b class="text-primary">@Model.Location</b>
        </div>
    </div>
</div>
