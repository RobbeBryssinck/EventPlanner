@model AddCoachViewModel

@{
    ViewData["Title"] = "Coach toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="CreateEvent">
    <div class="container">
        <div id="CreateEvent-row" class="row justify-content-center align-items-center">
            <div id="CreateEvent-column" class="col-md-6">
                <div id="CreateEvent-box" class="col-md-12">
                    <form id="CreateEvent-form" class="form" asp-action="AddCoach" enctype="multipart/form-data">
                        <h1>Evenement informatie</h1>
                        <hr />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Coach naam.." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Info" class="control-label"></label>
                            <textarea asp-for="Info" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Beschrijving.."></textarea>
                            <span asp-validation-for="Info" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email.." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="files" class="control-label"></label>
                            <input asp-for="files" type="file" name="files" multiple />
                            <span asp-validation-for="files" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Coach toevoegen" class="btn btn-Create" />
                        </div>
                        <a asp-action="Coaches">Alle coaches</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
