@model EventPlanner.Models.EventViewModel

@{
    ViewData["Title"] = "CreateEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Google Maps JavaScript library -->
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places&key=AIzaSyCMGzFaY4NywUNBSz80pFEuncUHgze1uQo"></script>
    <style>
        .btn-Create {
            color: black;
            background-color: #fcd703;
            border-color: #fcca03;
        }

            .btn-Create:hover {
                color: black;
                background-color: #fcca03;
                border-color: #fcc203;
            }
    </style>
}

<div id="CreateEvent">
    <div class="container">
        <div id="CreateEvent-row" class="row justify-content-center align-items-center">
            <div id="CreateEvent-column" class="col-md-6">
                <div id="CreateEvent-box" class="col-md-12">
                    <form id="CreateEvent-form" class="form" asp-action="CreateEvent" enctype="multipart/form-data">
                        <h1>Evenement informatie</h1>
                        <hr />
                        <div class="form-group">
                            <label asp-for="EventName" class="control-label"></label>
                            <input asp-for="EventName" class="form-control" placeholder="Evenement naam.." />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Date" class="control-label"></label>
                                    <input asp-for="Date" class="form-control" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="VisitorLimit" class="control-label"></label>
                                    <input asp-for="VisitorLimit" class="form-control" />
                                    <span asp-validation-for="VisitorLimit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Beschrijving.."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Street" class="control-label"></label>
                            <input asp-for="Street" class="form-control" placeholder="Straatnaam" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="HouseNumber" class="control-label"></label>
                            <input asp-for="HouseNumber" class="form-control" placeholder="Huisnummer" />
                            <span asp-validation-for="HouseNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" placeholder="Stad.." />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ZipCode" class="control-label"></label>
                            <input asp-for="ZipCode" class="form-control" placeholder="Post-Code.." />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email.." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EventType" class="control-label"></label>
                            <input asp-for="EventType" class="form-control" placeholder="Event type.." />
                            <span asp-validation-for="EventType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="files" class="control-label"></label>
                            <input asp-for="files" type="file" name="files" multiple />
                            <span asp-validation-for="files" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Maak aan" class="btn btn-Create" />
                        </div>
                        <a asp-action="Events">Alle evenementen</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Autocomplete location search input -->
<div class="form-group">
    <label>Location:</label>
    <input type="text" class="form-control" id="search_input" placeholder="Type address..." />
</div>
     </div>
   </div>
</div>
<script>
    var searchInput = 'search_input';

    $(document).ready(function () {
        var autocomplete;
        autocomplete = new google.maps.places.Autocomplete((document.getElementById(searchInput)), {
            types: ['geocode'],
            /*componentRestrictions: {
             country: "Netherlands"
            }*/
        });

        google.maps.event.addListener(autocomplete, 'place_changed', function () {
            var near_place = autocomplete.getPlace();
        });
    });
</script>
