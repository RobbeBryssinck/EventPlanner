@model List<AdminNewsletterPageViewModel>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin omgeving - Nieuwsbrief";
}
<form class="form-inline" asp-action="AdminNewsLetterPage" asp-controller="Admin">
    <input class="form-control mr-sm-" type="text" placeholder="Zoek een event" name="id" style="width:350px;">
</form>

<form asp-action="NewsLetterPost" asp-controller="Admin">
    <div class="card">
        <div class="card-header">
            <h2>Selecteer events om mee te sturen in de nieuwsbrief</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].EventId" />
                    <input type="hidden" asp-for="@Model[i].EventName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].EventName
                    </label>
                </div>

            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a class="btn btn-primary" style="width:auto">Annuleren</a>
        </div>
    </div>
</form>
