@model AdminAccountPageViewModel

@{
    Layout = "_LayoutAdmin";
}
<h1>Accounts</h1>
<p>
    <a asp-area="" asp-controller="Account" asp-action="RegisterPage">Maak een nieuw account aan</a>
</p>
<table class="table table-striped table-bordered table-sm " style="max-width:100%">
    <tr>
        <th>
            Gebruikersnaam
        </th>
        <th>
            Email
        </th>
        <th>
            Opties
        </th>
    </tr>
    <tbody>
                @foreach (var item in Model.Users)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <form method="post" asp-controller="Account" asp-action="AccountDelete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
