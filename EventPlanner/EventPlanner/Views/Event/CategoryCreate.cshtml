@model Categorie

@{
    ViewData["Title"] = "Maak categorie aan";
    Layout = "_LayoutAdmin";
}



<div id="CategoryCreate">
    <div class="container">
        <div id="CategoryCreate-row" class="row justify-content-center align-items-center">
            <div id="CategoryCreate-column" class="col-md-6">
                <div id="CategoryCreate-box" class="col-md-12">
                    <form asp-action="CategoryCreatePage">
                        <h1>Categorie informatie</h1>
                        <hr />
                        <div class="form-group">
                            <label asp-for="CategorieName" class="control-label"></label>
                            <input asp-for="CategorieName" class="form-control" />
                            <span asp-validation-for="CategorieName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Info" class="control-label"></label>
                            <input asp-for="Info" class="form-control" />
                            <span asp-validation-for="Info" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Maak aan" class="btn btn-Create" />
                        </div>
                    </form>
                    <div>
                        <a asp-controller="Admin" asp-action="AdminCategoryPage">Terug naar overzicht</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
