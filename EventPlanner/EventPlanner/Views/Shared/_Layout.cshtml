<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            position: relative;
            padding-bottom: 58px;
            min-height: 100vh;
        }

        footer {
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 20px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title>@ViewData["Title"] - EventPlanner</title>
</head>
<body>
    <main>
        <div class="container-fluid">
            <br />
            <nav class="navbar navbar-expand-sm" style="padding: 1px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo.png" alt="Logo" style="width:60px;">
                </a>

                <form class="form-inline" action="/action_page.php">
                    <input class="form-control mr-sm-" type="text" placeholder="Zoek een evenement" style="width:350px;">
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:black" onMouseOver="this.style.color='#7e8691'"
                           onMouseOut="this.style.color='#000'"> Evenementen </a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:black" onMouseOver="this.style.color='#7e8691'"
                           onMouseOut="this.style.color='#000'"> Login </a>
                    </li>
                </ul>
            </nav>
            <hr />
            <br>


            @RenderBody()

        </div>
    </main>

    <footer class="container-fluid">
        <hr />
        <p class="copyright text-muted">Copyright © Rockstars IT 2020</p>
    </footer>

</body>
</html>
