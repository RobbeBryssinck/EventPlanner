@model IdentityUser
@{
    ViewData["Title"] = "Verwijder account";
}

<div class="container">
    <div class="row">
        <p>Weet je zeker dat je het account wilt verwijderen?</p>
    </div>
    <div class="row">
        <form method="post" asp-controller="Account" asp-action="AccountDelete" asp-route-Id="User">
            <button class="btn btn-danger">Verwijder account</button>
        </form>
    </div>
</div>