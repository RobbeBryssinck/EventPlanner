<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title>@ViewData["Title"] - EventPlanner</title>
</head>
<body>
    <main>
        <div class="container-fluid">
            <br />
            <nav class="navbar navbar-expand-sm">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo.png" alt="Logo" style="width:60px;">
                </a>

                <form class="form-inline" action="/action_page.php">
                    <input class="form-control mr-sm-" type="text" placeholder="Zoek een evenement" style="width:350px;">
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:black" onMouseOver="this.style.color='#7e8691'"
                           onMouseOut="this.style.color='#000'"> Evenementen </a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color:black" onMouseOver="this.style.color='#7e8691'"
                           onMouseOut="this.style.color='#000'"> Login </a>
                    </li>
                </ul>
            </nav>
            <hr />
            <br>


            @RenderBody()

        </div>
    </main>
</body>
</html>
