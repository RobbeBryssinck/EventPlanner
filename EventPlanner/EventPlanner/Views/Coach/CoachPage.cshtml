@model CoachViewModel
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewData["Title"] = "Coach";
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <b class="text-dark">@Html.ActionLink("Terug naar coaches", "Coaches", "Coach")</b>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>@Model.Name</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-4">
            <img class="rounded img-fluid" style="max-width: 90%" src=~/Images/Coaches/@Model.ImageSrc alt="@Model.ImageSrc.ToString()">
        </div>
        <div class="col-8">
            <p>@Model.Info</p>
            @if ((signInManager.IsSignedIn(User)))
            {
                <div class="row">
                    <div class="col-3">
                        <a href="mailto: @Model.Email" class="btn btn-login">Email mij!</a>
                    </div>
                </div>
            }
            @if (!(signInManager.IsSignedIn(User)))
            {
                <a class="text-warning font-weight-bold">
                    Log in om een bericht te sturen
                </a>
            }
        </div>
    </div>
</div>
