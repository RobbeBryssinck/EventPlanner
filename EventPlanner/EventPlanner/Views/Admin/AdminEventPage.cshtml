@model AdminEventPageViewModel

@{
    Layout = "_LayoutAdmin";
}
<h1>Evenementen</h1>
<p>
    <a asp-area="" asp-controller="Event" asp-action="EventCreate">Maak een nieuw evenement aan!</a>
</p>
<table class="table table-striped table-bordered table-sm ">
    <tr>
        <th>
            Evenement naam
        </th>
        <th>
            Categorie
        </th>
        <th>
            Bezoekers
        </th>
        <th>
            Voor wie?
        </th>
        <th>
            Opties
        </th>
    </tr>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    <div style="height:100px;overflow:auto;">@Html.DisplayFor(modelItem => item.EventName)</div>
                </td>
                <td>
                    @Model.Categories.Where(x => x.CategorieId == item.CategoryId).FirstOrDefault().CategorieName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visitors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ForEmployees)
                </td>
                <td>

                    <a href='@string.Format("/Event/EventDeletePage?eventID={0}", item.EventId)'>Delete</a> |
                    <a href='@string.Format("/Event/EventPage?eventID={0}", item.EventId)'>Details</a> |
                    <a href='@string.Format("/Event/EventChangePage?eventID={0}", item.EventId)'>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
