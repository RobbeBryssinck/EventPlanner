@model Event
@{
    ViewData["Title"] = "EventPage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>Back to home</p>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <h1>@Model.EventName</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p>@Model.ImageSrc</p>
        </div>
        <div class="col-6">
            <p>@Model.Description</p>
        </div>
        <div class="col-2">
            <div class="card-body">
                <h5 class="card-title">Are you interested?</h5>
                <p class="card-text">@*@Model.Participants*@ people are already going!</p>
                <a href="@Url.Action("EventsJoin","Event",new {id = Model.EventId })"class="btn btn-primary">Join event</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p>@Model.Location</p>
        </div>
    </div>
</div>
