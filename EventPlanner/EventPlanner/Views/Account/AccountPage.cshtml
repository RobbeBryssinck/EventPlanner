@model ApplicationUser

@{
    ViewData["Title"] = "Account overzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gebruikerpagina</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Gebruikersnaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Voornaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Achternaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Geboortedatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
</div>
<div>
    <form method="post" asp-controller="Account" asp-action="AccountDeletePage" asp-route-id="User">
        <a asp-controller="Account" asp-action="AccountChangePage"
           asp-route-id="User" class="btn btn-primary">Wijzig</a>
        <button type="submit" class="btn btn-danger">Verwijder</button>
    </form>
</div>
<br />
<div>
    <a asp-action="index" asp-controller="Home">Terug</a>
</div>
