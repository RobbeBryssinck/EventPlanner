@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home";

    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .card-wrapper {
    margin-bottom: 30px;
}

.card-image .card .card-img-wrapper {
    height: 100%;
}

.card-image .card .card-body {
    display: none;
}

.card-image-title-description .card .card-img-wrapper {
    max-height: 160px;
}

.card-image-title-description .card {
    min-height: 300px;
    position: relative;
}

    .card-image-title-description .card .card-body {
        height: auto;
        margin-bottom: -70px;
        position: relative;
        top: 0;
    }

    .card-image-title-description .card:hover .card-body {
        top: -70px;
    }

    .card-image-title-description .card .card-body .card-title {
        margin-bottom: .75rem;
    }

.card {
    display: inline-block;
    height: 100%;
    min-height: 400px;
    overflow: hidden;
    position: relative;
}

    .card:hover {
        box-shadow: 8px 12px 31px -10px #ab98ab;
    }

.card-img-wrapper {
    align-items: center;
    display: flex;
    height: 50%;
    justify-content: center;
    overflow: hidden;
}

    .card-img-wrapper img {
        transition: 1.5s ease;
    }

.card:hover .card-img-wrapper img {
    transform: scale(1.15);
}

.card-body .card-title {
    margin-bottom: calc(50% + 20px);
    transition: 1.5s ease;
}

.card:hover .card-body .card-title {
    margin-bottom: .75rem;
}

.card-body {
    background-color: #fff;
    bottom: 0;
    height: 50%;
    left: 0;
    position: absolute;
    right: 0;
    transition: 1.5s ease;
}

.card-content {
    height: auto;
    left: 0;
    overflow: hidden;
    right: 0;
    transition: 1.5s ease;
    width: 100%;
}

.card:hover .card-body {
    height: 80%;
}

.card:hover .card-content {
    bottom: 0;
}

    </style>
}

<body>
    <!--- Welcome Section -->
    <div class="container">
        <div class=" row welcome text-center">
            <div class="col-12">
                <h1 class="display-4">Aankomende events.</h1>
            </div>
            <hr />
            <div class="col-12">
                <p class="lead">
                    @*Text for under the aankomende events*@
                </p>
            </div>
        </div>
    </div>

    <!--- Three Column Section -->
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Events)
            {
                <div class="card-wrapper col-lg-4 col-md-6 col-xs-12">
                    <div class="card">
                        <div class="card-img-wrapper">
                            <img class="card-img-top" src="~/Images/Events/@item.ImageSrc" alt="@item.ImageSrc.ToString()">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.EventName</h5>
                            <div class="card-content">
                                <a href='@string.Format("/Event/EventPage?eventID={0}", item.EventId)' class="btn btn-Create">Meer informatie</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr class="my-4" />
    <!--- Foto met informatie -->
    <div class="container">
        <div class="row padding">
            <div class="col-md-12 col-lg-6">
                <h2>Meer over ons.</h2>
                <p class="text-secondary">
                    <a href="#" class="text-secondary"><b>Team Up IT</b></a> is de opleidingstak van <a href="#" class="text-secondary"><b>Team Rockstars IT</b></a>.
                    Team Up IT staat voor ontwikkeling.
                    IT Rockstars zijn op de hoogte van wat er speelt in hun vakgebied en voelen de drang de beste versie van hunzelf te worden!
                    Bij Team Up IT bieden we de ontwikkelmogelijkheden op verschillende gebieden om dit te bereiken.
                </p>
                <p class="text-secondary">
                    Deze website geeft je een beeld van de kansen die we je kunnen bieden op jouw gewenste ontwikkelgebied.
                    Vervolgens maak je in overleg met je Rockstars Coach een programma dat goed aansluit bij jouw groeiwensen!
                    Je kan denken aan een rol als lead developer, projectmanager, architect, consultant of ondernemer.
                    Op die manier verzeker je jezelf niet alleen nu van een goede carrière, maar zorg je er ook dat je over 5 jaar aan de absolute top staat.
                </p>
            </div>
            <div class="col-lg-6">
                <img class="rounded img-fluid" src="~/Images/HomePage/RockstarTeamIT.jpg" />
            </div>
        </div>
        <hr class="my-4" />
    </div>

    <!--  Foto met informatie 2 -->
    <div class="container">
        <div class="row padding">
            <div class="col-lg-6">
                <img class="rounded img-fluid" src="~/Images/HomePage/RockstarOpleiding.jpg" />
            </div>
            <div class="col-md-12 col-lg-6">
                <h2>Opleiding </h2>
                <p class="text-secondary">
                    IT Rockstars blijven zichzelf ontwikkelen binnen hun vakgebied; waar gelukkig heel erg veel te leren valt!
                    Naar mate je meer ervaren wordt kan je een hogere mate van complexiteit aan,
                    daarnaast ontstaan er tegelijkertijd continu nieuwe technieken.
                </p>
                <p class="text-secondary">
                    Team Up IT biedt verschillende mogelijkheden om je technische kennis bij te spijkeren;
                    je kan deelnemen aan kennisevents, certificeringen behalen,
                    technische elearning modules doorlopen en met Project X werken aan je projectmanagement skills.
                </p>
            </div>
        </div>
        <hr class="my-4" />
    </div>
    <br />
    <div class="container justify-content-center align-items-center">
        <h4 class="text-center">Ik wil mails ontvangen over de laatste opleidingen en evenementen!</h4>

        <div id="NewsLetter">
            <div class="container">
                <div id="NewsLetter-row" class="row justify-content-center align-items-center">
                    <div id="NewsLetter-column" class="col-md-6">
                        <div id="NewsLetter-box" class="col-md-12">
                            <form id="NewsLetter-form" class="form" asp-action="MailSender">
                                <div class="form-group">
                                    <label class="control-label" for="email">Emailadres:</label>
                                    <input placeholder="Emailadres" class="form-control" type="text" id="email" name="email" value="">
                                </div>
                                <div class="form-group">
                                    <input class="btn-Create btn" type="submit" value="Aanmelden">
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>