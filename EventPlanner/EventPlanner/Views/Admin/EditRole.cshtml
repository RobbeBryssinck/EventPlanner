@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    Layout = "_LayoutAdmin";
}

<h1>Rol aanpassen</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" disabled class="form-control">
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Gebruikers in deze rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Geen gebruikers</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Gebruikers toevoegen of verwijderen</a>
        </div>
    </div>

    <br />

    <a asp-action="ListRoles" class="btn btn-primary">Terug naar rollen</a>
</form>
