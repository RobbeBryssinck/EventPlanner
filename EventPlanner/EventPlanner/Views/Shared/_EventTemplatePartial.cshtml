@model Event
<div class="rounded container EventsBorder">
    <div class="row">
        <div class="col"><h4><a href='@string.Format("/Event/EventPage?eventID={0}", Model.EventId)'>@Model.EventName</a></h4><br /></div>
    </div>

    <div class="row">
        <div class="col"><h6>@Model.Date</h6> </div>
    </div>

    <div class="row">
        <div class="col"><h7>@Model.Location</h7><br /><br /></div>
    </div>

    <div class="row">
        <div class="col-3"><img class="rounded" style="max-width: 66%" src="~/Images/@Model.ImageSrc" /></div>
        <div class="col-9"><h8>@Model.Description</h8></div>
    </div>
</div>
<br />