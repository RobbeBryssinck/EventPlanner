@model CreateRoleViewModel

@{
    ViewData["Title"] = "Maak nieuwe rol aan";
    Layout = "_LayoutAdmin";
}


<style>
    #register .container #register-row #register-column #register-box {
        margin-top: 8%;
        max-width: 600px;
        height: 660px;
        border: 1px solid black;
        background-color: #EAEAEA;
    }

        #register .container #register-row #register-column #register-box #register-form {
            padding: 20px;
        }

            #register .container #register-row #register-column #register-box #register-form #register-link {
                margin-top: -85px;
            }

    .text-info {
        color: black !important;
    }

    a.text-info:hover, a.text-info:focus {
        color: grey !important;
    }

    .btn-register {
        color: black;
        background-color: #fcd703;
        border-color: #fcca03;
    }

        .btn-register:hover {
            color: black;
            background-color: #fcca03;
            border-color: #fcc203;
        }
</style>
<div class="container">
    <div id="register-row" class="row justify-content-center align-items-center">
        <div id="register-column" class="col-md-6">
            <div id="register-box" class="col-md-12">
                <form id="register-form" class="form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h3 class="text-center text-info">Rol aanmaken</h3>

                    <div class="form-group">
                        <label asp-for="RoleName" class="text-info">Naam:</label><br>
                        <input asp-for="RoleName" id="Username" class="form-control input-sm">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="submit" class="btn btn-register btn-md" value="submit">Maak rol aan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />