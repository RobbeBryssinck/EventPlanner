@model EventModel
@{
    ViewData["Title"] = "EventPage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>Back to home</p>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <h1>@Model.EventName</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p>@Model.ImageSrc</p>
        </div>
        <div class="col-8">
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p>@Model.Location</p>
        </div>
    </div>
</div>
