@model Coach
@{
    ViewData["Title"] = "Coach";
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <b class="text-dark">@Html.ActionLink("Terug naar coaches", "Coaches", "Coach")</b>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>@Model.Name</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-4">
            <img class="rounded img-fluid" style="max-width: 90%" src=~/Images/Coaches/@Model.ImageSrc alt="@Model.ImageSrc.ToString()">
        </div>
        <div class="col-6">
            <p>@Model.Info</p>
            <div class="row">
                <div class="col-3">
                    <a href="mailto: @Model.Email" class="btn btn-login">Email mij!</a>
                </div>
                <div class="col-3">
                    <a href='@string.Format("/Coach/DeleteCoachPage?coachID={0}", Model.CoachId)' class="btn btn-danger">Verwijder coach</a>
                </div>
            </div>
        </div>
    </div>
</div>
